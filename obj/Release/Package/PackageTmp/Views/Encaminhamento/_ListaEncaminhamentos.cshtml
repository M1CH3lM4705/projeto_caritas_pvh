@model PagedList.IPagedList<ProjetoBetaAutenticacao.Models.Encaminhamento>
@using PagedList.Mvc

@Styles.Render("~/Content/PagedList.css")


<div id="content" class="table-responsive-sm">
    <table id="table_grid" class="table table-striped table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Tipo Encaminhamento</th>
                <th scope="col">Data da Solicitação</th>
                <th scope="col">Entregue?</th>
                <th scope="col">Data da Entrega</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody id="listaEnc">

            @foreach (var item in Model)
            {
                <tr data-id="@item.EncaminhamentoId">
                    <td data-tipo="@item.TipoEncaminhamento">@Html.DisplayFor(m => item.TipoEncaminhamento)</td>
                    <td data-solicitacao="@item.DataSolicitacao">@Html.DisplayFor(m => item.DataSolicitacao)</td>

                    <td data-status="@item.Status">@(item.Status == true ? "SIM" : "Não")</td>

                    @if (item.DataEntrega == null)
                    {
                        <td data-entrega="@item.DataEntrega">
                            <label>Aguardando...</label>
                        </td>
                    }
                    else
                    {
                        <td data-entrega="@item.DataEntrega">
                            @Html.DisplayFor(m => item.DataEntrega)
                        </td>
                    }
                    @if (item.Status == true)
                    {
                        <td>
                            <button type="button" class="btn btn-secondary  my-1 " disabled>Finalizado</button>
                            <button type="button" class="btn btn-warning  my-1" disabled><i class="bi bi-pencil-square"></i></button>
                            <button type="button" class="btn btn-danger  " disabled><i class="bi bi-trash"></i></button>
                        </td>
                    }
                    else
                    {
                        <td>
                            <button type="button" class="btn  btn-primary btnFinalizar my-1" title="Finlizar Entrega" data-value="@item.PessoaCarenteId">Finalizar Entrega</button>
                            <button type="button" class="btn btn-warning my-1 btnAlterarEnc" title="Alterar Encaminhamento">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            @if (User.IsInRole("Admin"))
                            {
                                <button type="button" class="btn btn-danger  btnExcluirEnc" title="Excluir Encaminhamento"><i class="bi bi-trash"></i></button>

                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />
    Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    <div id="contentPager">
        @Html.PagedListPager(Model, pagina => Url.Action("Index", new { valor = ViewBag.Id, pagina, tamanhoPag = ViewBag.TamanhoPagina }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
            {
                HttpMethod = "GET",
                UpdateTargetId = "listaEnc",
                OnSuccess = "onAjaxSuccess",
                OnFailure = "onAjaxFailure"
            }))
    </div>

</div>




