@model ProjetoBetaAutenticacao.Models.MembroFamilia
@using HtmlHelpers.BeginCollectionItem

<div class="form-row" id="addCampos">
    @using (Html.BeginCollectionItem("MembroFamilia"))
    {
        @Html.HiddenFor(m => m.ParenteId)
        @Html.HiddenFor(m => m.PessoaCarenteId)
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
            <div class="">
                @Html.ValidationMessageFor(m => m.Nome, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Idade, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(m => m.Idade, new { htmlAttributes = new { @class = "form-control" } })
            <div class="">
                @Html.ValidationMessageFor(m => m.Idade, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Cpf, htmlAttributes: new { @class = "control-label col-md-2 " })
            @Html.EditorFor(m => m.Cpf, new { htmlAttributes = new { @class = "form-control cpf", @id = "CpfMembroFamiliar" } })
            <div class="">
                @Html.ValidationMessageFor(m => m.Cpf, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Rg, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(m => m.Rg, new { htmlAttributes = new { @class = "form-control" } })
            <div class="">
                @Html.ValidationMessageFor(m => m.Rg, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m => m.Parentesco, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(m => m.Parentesco, new { htmlAttributes = new { @class = "form-control" } })
            <div class="">
                @Html.ValidationMessageFor(m => m.Parentesco, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            <a href="#" id="removerFamiliar" class="btn btn-secondary">Remover</a>
        </div>

    }
</div>
