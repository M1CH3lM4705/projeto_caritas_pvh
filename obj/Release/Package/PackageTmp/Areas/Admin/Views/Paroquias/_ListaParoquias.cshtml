@model PagedList.IPagedList<ProjetoBetaAutenticacao.Areas.Admin.Data.Paroquia>
@using PagedList.Mvc

@Styles.Render("~/Content/PagedList.css")

<div id="content" class="table-responsive-sm">
    <table id="table_grid" class="table table-striped table-sm table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Endereco)
                </th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody id="tbody">
            @foreach (var item in Model)
            {
                <tr data-id="@item.ParoquiaId">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        <a class="btn btn-secondary btnAlterarParoquia" href="#" title="Alterar Paróquia"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-secondary btnDetalhes" href="#" title="Visualizar Detalhes"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-secondary btnExcluirParoquia" href="#" title="Excluir Paróquia"><i class="bi bi-trash"></i></a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
    <br />
    Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    <div id="contentPager">
        @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, pesquisa = ViewBag.Pesquisa }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
                {
                HttpMethod = "GET",
                UpdateTargetId = "tbody",
                OnSuccess = "onAjaxSuccess",
                OnFailure = "onAjaxFailure"
            }))
    </div>
</div>