@model ProjetoBetaAutenticacao.Areas.Admin.Data.Paroquia

@{
    ViewBag.Title = "Cadastrar Paróquia";
    Layout = null;
}



    @Html.AntiForgeryToken()
<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ParoquiaId)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-10">
        @Html.LabelFor(m => m.Estado, htmlAttributes: new { @class = "control-label" })
        @Html.EnumDropDownListFor(m => m.Estado, "-- Selecione o Estado--", htmlAttributes: new { @class = "form-control", @id = "UF" })
        <div class="">
            @Html.ValidationMessageFor(m => m.Estado,"", new { @class = "text-danger" })

        </div>
    </div>
    @if (Model.ParoquiaId != 0)
    {
        <div class="item form-group">
            <label class="control-label col-md-2" for="Municipio_id">Município</label>
            <div class="col-md-10">
                <select id="Municipio_id" name="Cidade" class="form-control">
                    <option value="@ViewBag.Cidade.Id"> @ViewBag.Cidade.Nome</option>
                </select>
            </div>
        </div>
    }
    else
    {
        <div class="item form-group">
            <label class="control-label col-md-2" for="Municipio_id">Município</label>
            <div class="col-md-10">
                <select id="Municipio_id" name="Cidade" class="form-control">
                    <option value="0"> Selecione... </option>
                </select>
            </div>
        </div>
    }
</div>



