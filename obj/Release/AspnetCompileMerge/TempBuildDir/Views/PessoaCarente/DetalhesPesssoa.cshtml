@model ProjetoBetaAutenticacao.Models.PessoaCarente

@{
    ViewBag.Title = "Detalhes da Pesssoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="container_div">
    <section>
        <h2>@ViewBag.Title</h2>
    </section>
    <section class="text-right">
        <a href="@Url.Action("Index", "Encaminhamento", new { id = Model.PessoaCarenteId })" class="text-decoration-none">Encaminhamento</a>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x-panel">
                    <div class="x-title">
                        <h2>Dados Da Pessoa</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x-content ml-3">
                        <section class="x-content invoice">
                            <div class="row mb-2">
                                <div class="col-sm-3">
                                    <strong>Nome:</strong>&nbsp;@Html.DisplayFor(model => model.Nome)
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Data de Nascimento:</strong>&nbsp;@Html.DisplayFor(Model => Model.DataNascimento)
                                </div>
                                <div class="col-sm-3">
                                    <strong>Genêro:</strong>&nbsp;@Html.DisplayFor(Model => Model.Genero)
                                </div>
                                <div class="col-sm-3">
                                    <strong>Estado Cívil:</strong>&nbsp;@Html.DisplayFor(Model => Model.EstadoCivil)
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>CPF:</strong>&nbsp;@Html.DisplayFor(Model => Model.Cpf)
                                </div>
                                <div class="col-sm-3">
                                    <strong>RG:</strong>&nbsp;@Html.DisplayFor(Model => Model.Rg)
                                </div>
                                <div class="col-sm-4">
                                    <strong>Protocolo de Réfugio:</strong>&nbsp;@(Model.ProtocoloRefugio!=null ? Model.ProtocoloRefugio : "Sem Protocolo")
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Profissão:</strong>&nbsp;@Html.DisplayFor(Model => Model.Profissao)
                                </div>
                                <div class="col-sm-3">
                                    <strong>Renda:</strong>&nbsp;@Html.DisplayFor(Model => Model.Renda)
                                </div>
                                <div class="col-sm-4">
                                    <strong>Beneficio:</strong>&nbsp;@(Model.Beneficio.SimNao == true ? Model.Beneficio.TipoBeneficio : "Não Recebe")
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Contato:</strong>&nbsp;@Html.DisplayFor(model => model.Contato.Celular).ToString().Replace("?", String.Empty)
                                </div>
                                <div class="col-sm-3">
                                    <strong>WhatsApp:</strong>&nbsp;@(Model.Contato.WhatsApp == true ? "Sim" : "Não")
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Nacionalidade:</strong>&nbsp;@Html.DisplayFor(model => model.Nacionalidade)
                                </div>
                                <div class="col-sm-3">
                                    <strong>Religião:</strong>&nbsp;@Html.DisplayFor(model => model.Religiao)
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="x-panel">
                    <div class="x-title">
                        <h2>Endereço</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x-content ml-3">
                        <section class="x-content invoice">
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Rua:</strong>&nbsp;@Html.DisplayFor(model => model.Endereco.Rua)
                                </div><div class="col-sm-3">
                                    <strong>Número:</strong>&nbsp;@Html.DisplayFor(model => model.Endereco.Numero)
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4">
                                    <strong>Bairro:</strong>&nbsp;@Html.DisplayFor(model => model.Endereco.Bairro)
                                </div><div class="col-sm-3">
                                    <strong>CEP:</strong>&nbsp;@Html.DisplayFor(model => model.Endereco.Cep)
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <div class="x-panel">
            <div class="x-title">
                <h2>Perfil Socioeconômico</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x-content ml-3">
                <section class="x-content invoice">
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Escolaridade:</strong>&nbsp;@Html.DisplayFor(model => model.PerfilEconomico.Escolaridade)
                        </div><div class="col-sm-4">
                            <strong>Ocupação Atual:</strong>&nbsp;@Html.DisplayFor(model => model.PerfilEconomico.OcupacaoAtual)
                        </div>
                    </div>

                </section>
            </div>
        </div>
        <div class="x-panel">
            <div class="x-title">
                <h2>Membros da Familia</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x-content ml-3">
                <section class="x-content invoice">
                    @foreach (var membro in Model.MembroFamilia)
                    {
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Nome:</strong>&nbsp;@Html.DisplayFor(model => membro.Nome)
                        </div>
                        <div class="col-sm-4">
                            <strong>Idade:</strong>&nbsp;@Html.DisplayFor(model => membro.Idade)
                        </div>
                        <div class="col-sm-4">
                            <strong>Parentesco:</strong>&nbsp;@Html.DisplayFor(model => membro.Parentesco)
                        </div>
                    </div>
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <strong>CPF:</strong>&nbsp;@Html.DisplayFor(model => membro.Cpf)
                            </div><div class="col-sm-4">
                                <strong>RG:</strong>&nbsp;@Html.DisplayFor(model => membro.Rg)
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
     </section>   
<p class="mt-5 mb-3">
    
    @Html.ActionLink("Voltar à Lista", "Index",null, new { @class = "text-decoration-none" })
</p>
</div>